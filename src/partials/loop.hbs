{{#foreach posts}}
  <article class="{{post_class}} post-tile" style="background-image: url({{image}}); background-repeat: no-repeat">
    <header class="overlay">
      <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
      <p class="tags">{{tags}}</p>
    </header>
  </article>
{{/foreach}}
